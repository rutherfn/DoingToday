<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvNothingToDoToday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_to_dos"
        android:textSize="@dimen/empty_state_text_size"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margin_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvClickHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_here"
        android:textSize="@dimen/empty_state_text_size"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorHyperLink"
        android:layout_marginTop="@dimen/margin_6dp"
        app:layout_constraintStart_toStartOf="@+id/tvNothingToDoToday"
        app:layout_constraintTop_toBottomOf="@+id/tvNothingToDoToday" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/tvClickHere"
        app:layout_constraintStart_toEndOf="@+id/tvClickHere"
        app:layout_constraintTop_toTopOf="@+id/tvClickHere" />

</androidx.constraintlayout.widget.ConstraintLayout>